Bootstrap: docker
From: pytorch/pytorch:1.12.1-cuda11.3-cudnn8-runtime

%files
    ./detector.py /
    ./entrypoint.py /
    ./utils /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /
    ./*.py /

%post
    apt update

    pip install --upgrade pip
    pip install tqdm jsonschema jsonargparse scikit-learn
    pip install pandas
    pip install scipy

%runscript
    exec python3 /entrypoint.py "$@"
